<?PHP

class Security{
    
    static public function isAdminSession()
    {    
        return $_SESSION['admin']==1 ? true : false;   
    }
    
    static public function killUserSession()
    {    
        unset($_SESSION['user']);
        session_regenerate_id(true);   
    }
    
    static public function passHash($value)
    {
        $saltThisValue = "boom ba bi bap bap ".$value." woo wa wa weeee waaahhhh";
        return $hash = base64_encode(hash('sha256', $saltThisValue, false));

    }
    
    static public function isAJAX()
    {    
        return isset($_SERVER['CONTENT_TYPE']) && $_SERVER['CONTENT_TYPE'] == 'application/x-www-form-urlencoded' ? true : false;   
    }
    
    static public function makePass($length)
    {    
        $random = '';
        for ($i = 0; $i < $length; $i++) { $random .= dechex(mt_rand(0, 15)); }
        
        return $random;
    }
}

